{% set lang  = debit.sessionStorage.getLang() %}
{% set name  = debit.settings.getSetting('name', lang) %}

{% if (lang == 'de') %}
	<img src="{{ plugin_path("Debit") }}/images/icon.png" title="{{ name }}">
{% else  %}
	<img src="{{ plugin_path("Debit") }}/images/icon_en.png" title="{{ name }}">
{% endif %}
